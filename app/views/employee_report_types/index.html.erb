
<h1>Employee Report Types</h1><hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Report type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_report_types.each do |employee_report_type| %>
      <tr>
        <td><%= employee_report_type.Report_Type %></td>
        <td><%= link_to 'Show', employee_report_type %></td>
        <td><%= link_to 'Edit', edit_employee_report_type_path(employee_report_type) %></td>
        <td><%= link_to 'Destroy', employee_report_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

