<h1>Employee Tasks</h1><hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Task name</th>
      <th>Description</th>
      <th>Task start date</th>
      <th>Task end date</th>
      <th>Employee report</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_tasks.each do |employee_task| %>
      <tr>
        <td><%= employee_task.Task_Name %></td>
        <td><%= employee_task.Task_Description %></td>
        <td><%= employee_task.Task_Start_Date %></td>
        <td><%= employee_task.Task_Due_Date %></td>
        <td><%= employee_task.employee_report %></td>
        <td><%= link_to 'Show', employee_task %></td>
        <td><%= link_to 'Edit', edit_employee_task_path(employee_task) %></td>
        <td><%= link_to 'Destroy', employee_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

